{
    "printWidth": 80,
    "tabWidth": 2,                 
    "useTabs": false,
    "semi": true,    
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,        
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.html",
        "options": {
          "parser": "html" 
        }
      },
      {
        "files": "*.css",
        "options": {
          "parser": "css"
        }
      }
    ]
  }